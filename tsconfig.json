{
  "compilerOptions": {
    "skipLibCheck": true, // Ignora a verificação de tipos em arquivos de declaração, no caso externas
    "target": "ES2017",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "strict": true, 
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"],
      
    },
    "types":[ "node"],
  },
  "include": ["app", "unix"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "references": [{ "path": "./resources/tsconfig.json" }]
}
