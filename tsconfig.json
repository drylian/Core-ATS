{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "app",
    "paths": {
      "@/*": ["./app/*"],

      "assets/*": ["./app/assets/*"]
    }
  },
  "include": ["app", "unix"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}